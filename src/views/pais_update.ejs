<%- include('partials/_header') %>

<h1>ACTUALIZANDO VALORES DE PAIS</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    
                    <form action="/update-pais/<%= data.idPais%>" method="post">
        
                        <div class="form-group">
                            <input type="text" name="Nombre" class="form-control" value="<%= data.Nombre %>">
                        </div>
        
                        <button type="submit" class="btn btn-primary"> Save </button>
        
                    </form>

                </div>
            </div>
        </div>

        <div class="col-md-5">

            <h3>Valores Actuales: </h3>
            <table class="table table-dark table-bordered table-hover">
                
                <thead>
                    <tr>
                        <th>Nombre</th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        <td><%= data.Nombre %></td>
                    </tr>

                </tbody>

        </div>

    </div>
</div>

<%- include('partials/_footer') %>