<%- include('partials/_header') %>

<h1>ACTUALIZANDO VALORES DE DIRECTOR</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    
                    <form action="/update-director/<%= data.idDirector%>" method="post">
        
                        <div class="form-group">
                            <input type="text" name="Nombre" class="form-control" value="<%= data.Nombre %>">
                        </div>
        
                        <div class="form-group">
                            <input type="text" name="ApellidoPaterno" class="form-control" value="<%= data.ApellidoPaterno %>">
                        </div>
                        
                        <div class="form-group">
                            <input type="text" name="ApellidoMaterno" class="form-control" value="<%= data.ApellidoMaterno %>">
                        </div>

                        <div class="form-group">
                            <textarea name="Biografia" id="Biografia" cols="30" rows="10" class="form-control"><%= data.Biografia %></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary"> Save </button>
        
                    </form>

                </div>
            </div>
        </div>

        <div class="col-md-5">

            <h3>Valores Actuales: </h3>
            <table class="table table-dark table-bordered table-hover">
                
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Ap.Paterno</th>
                        <th>Ap.Materno</th>
                        <th>Biografia</th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        <td><%= data.Nombre %></td>
                        <td><%= data.ApellidoPaterno %></td>
                        <td><%= data.ApellidoMaterno %></td>
                        <td><%= data.Biografia %></td>
                    </tr>

                </tbody>

        </div>

    </div>
</div>

<%- include('partials/_footer') %>